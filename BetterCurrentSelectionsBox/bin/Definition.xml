  <!-- 9 -->
  <Text Label="Label Text Color" type="color"></Text>
  
  <!-- 10 -->
  <Text Label="Text Color" type="color"></Text>
  
  <!-- 11 -->
  <Text Label="HidePrefixes" type="text"></Text>
  
  <!-- 12 -->
  <Text Label="HideFields" type="text"></Text>

</ExtensionObject>